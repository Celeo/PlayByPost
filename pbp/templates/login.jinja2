{% extends 'base.jinja2' %}

{% block body %}

<div class="container">
  <h1>Log in</h1>
  <br>
  <form action="{{ url_for('base.profile_login') }}" method="POST">
    <input type="hidden" name="csrf_token" value="{{ csrf_token() }}">
    <div class="form-group">
      <label for="email">Email</label>
      <input type="text" class="form-control" name="email" placeholder="your_address@somewhere.com" required>
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" name="password" placeholder="password" required>
    </div>
    <button type="submit" class="btn btn-outline-primary">Login</button>
  </form>
  <br>
  <a href="{{ url_for('base.profile_reset_password') }}">I forgot my password</a>
</div>

{% endblock %}
