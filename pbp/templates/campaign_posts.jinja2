{% extends 'base.jinja2' %}

{% block body %}

<div class="container-medium">
  <h2>{{ campaign.name }}</h2>
  {# TODO pagination #}
  {% for post in posts %}
    <div class="card rounded shadow mb-2">
      <div class="card-body">
        <div class="card-title clearfix post-title">
          <h5 class="float-left">{{ post.character.name }} ({{ post.tag }})</h5>
          <h5 class="float-right">{{ post.date | format_date }}</h5>
        </div>
        {{ post.content }}
        <div id="rolls">
          {% for roll in post.rolls %}
            <div class="roll">
              {{ roll.string }} => {{ roll.value }}{% if roll.is_crit %} (crit){% endif %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  {% endfor %}
</div>

{% endblock %}
